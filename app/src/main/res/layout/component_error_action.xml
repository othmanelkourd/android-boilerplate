<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/error_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_opaque"
                android:gravity="center_vertical"
                android:padding="15dp">

    <LinearLayout
        android:id="@+id/action_button_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/error_action_button"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_margin="0dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:padding="0dp"
            android:textAllCaps="false"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/error_action_text"
        style="@style/SubTitle"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/action_button_wrapper"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>
</RelativeLayout>
